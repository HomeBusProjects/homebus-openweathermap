[Unit]
Description=HomeBus publisher
After=network.target

[Service]
Type=simple
User=homebus
WorkingDirectory=/home/homebus/homebus-openweathermap
ExecStart=/home/homebus/.rbenv/bin/rbenv exec bundle exec bin/homebus-openweathermap
TimeoutSec=30
Restart=always

[Install]
WantedBy=multi-user.target

